<div class="container">
  <div class="d-flex justify-content-around ">
    <% @letters.each { |letter| %>
      <div class="letter"><%= letter %></div>
    <% } %>
  </div>

  <div class="mt-5 mb-2">What's the longest word you can find?</div>

  <form class="input-group mb-3" action="/score" method="post" data-turbo="false">
    <input type="text" class="form-control" placeholder="" name="word">
    <button class="btn btn-primary" type="submit">Play</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
